<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cv"
        android:background="#ffffff"
        android:layout_height="130dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:background="#ffffff"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:id="@+id/app_thumbnail"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="2.2"
                android:layout_alignRight="@+id/app_thumbnail"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:id="@+id/title_of_the_app"
                    android:layout_alignParentTop="true"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Title of the app"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:id="@+id/description_of_the_app"
                    android:layout_alignParentTop="true"
                    android:textSize="12sp"
                    android:paddingLeft="12dp"
                    android:textColor="#757575"
                    android:text="Description of the app"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    >
                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_margin="3dp"
                        android:layout_width="30sp"
                        android:layout_height="30dp"
                        android:id="@+id/progress_bar"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="43dp"
                        android:id="@+id/add_icon"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:textColor="#FFD180"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="ADD"
                        />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>